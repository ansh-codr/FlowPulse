{
  "manifest_version": 3,
  "name": "FlowPulse Tracker",
  "description": "Track browser activity and sync to FlowPulse Supabase backend.",
  "version": "1.0.0",
  "permissions": ["tabs", "storage", "identity", "alarms", "idle"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "FlowPulse"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "optional_permissions": ["notifications"]
}
